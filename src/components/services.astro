---
import ServicesCard from "./servicesCard.astro";
import { getCollection } from 'astro:content';

const servicesCollection = await getCollection('services');
const { data } = servicesCollection[0]
---

<div
  id="services"
  class="about-us flex flex-col items-center justify-center w-full p-8"
>
  <div class="flex flex-col items-center justify-center gap-16">
    <h2 class="font-slab text-5xl text-center">
      Soluciones tecnol√≥gicas a la medida
    </h2>
    <ul class="flex flex-row flex-wrap items-center justify-center gap-10">
      {
        data.map((service) => (
            <li>
                <ServicesCard
                    title={service.title}
                    description={service.description}
                    abbreviation={service.abbreviation}
                />
            </li>
        ))
      }
    </ul>
  </div>
</div>
