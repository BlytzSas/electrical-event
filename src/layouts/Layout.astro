---
import Header from "../components/header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="flex flex-col md:flex-row relative">
		<div class="flex md:hidden fixed top-4 right-4 z-40">
			<button id="openMenu" class="p-2 bg-white text-black rounded">
				Menu
			</button>
		</div>
		<main class="w-full h-screen pr-0 md:pr-10">
			<slot />
		</main>
		<Header />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #000;
		color: #FFF;
	}

	/* Add this class to show the menu */
	.show-menu {
		transform: translateX(0) !important;
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const openMenuBtn = document.getElementById('openMenu');
		const header = document.querySelector('header');

		openMenuBtn?.addEventListener('click', () => {
			header?.classList.remove('hidden');
			header?.classList.add('flex');
		});
	});
</script>
